import unittest

class PrimeNumbersTestCases(unittest.Testcase):
    def test_no_negative_numbers(self):
        result = prime_solution(-1)
        self.assertEqual(result, 'returns only positive integers')

    def test_it_returns_only_integers(self):
        with self.assertRaises(ValueError) as context:
            prime_solution(5.9)
            self.assertEqual('the function should only return integers')

    def test_it_returns_prime_numbers(self):
        self.assertEqual(prime_solution.a_prime_number(2), True)

    def test_retun_false_if_the_number_is_not_prime(self):
        self.assertEqual(prime_solution.a_prime_number(10), False)


                    
